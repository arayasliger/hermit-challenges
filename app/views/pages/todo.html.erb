<div>
  <h1>Todo List</h1>
  <!-- Form to Add a New Task -->
  <%= form_with(model: @task, url: tasks_path, local: true) do |f| %>
    <%= f.text_field :name, placeholder: "New Task", required: true %>
    <%= f.submit "Add Task" %>
  <% end %>

  <!-- Display All Tasks -->
  <ul id="todo-list">
    <% @tasks.each do |task| %>
      <li id="task_<%= task.id %>">
        <%= task.name %>
      </li>
    <% end %>
  </ul>
</div>