<div class="blog">
	<h1 class="custom-title">The Hermiton Herald</h1>
	
	<p><%= link_to "New Post", new_article_path, class: "action" %></p>
	
	<% @articles.each do |article| %>
		<div class="article-container">
			<h2><%= link_to article.title, article_path(article), class: "article-title"%></h2>
			
			<div class="article-content"><%= article.content_to_html %></div>
			
			<div class="article-actions">
				<%= link_to "Edit", edit_article_path(article), class: "action" %>
				<%= link_to "Delete", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "action"%>
			</div>
		</div>
	<% end %>
</div>